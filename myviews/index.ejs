<%- include('./includes/base.ejs') %>

    <h1>Home</h1>
    
    <%- include('./includes/header.ejs') %>

    <div>
        <h2>All Blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a href="/blogs/<%= blog._id %>">
                    <h3> <%= blog.title %> </h3>
                    <p> <%= blog.snippet %> </p>
                </a>
            <% }) %>
        <% } else { %>
            <h3>No blogs yet</h3>
        <% } %>
    </div>

    <%- include('./includes/footer.ejs') %>
